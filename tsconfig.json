{
  "compilerOptions": {
    "target": "es2021",
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "plugins": [
      {
        "name": "@effect/language-service"
      }
    ]
  },
  "ts-node": {
    "transpileOnly": true
  }
}
