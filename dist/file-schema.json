{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$defs": {
    "Metric": {
      "type": "object",
      "required": [
        "key",
        "value"
      ],
      "properties": {
        "key": {
          "type": "string",
          "description": "A unique string that represents this metric across runs",
          "title": "minLength(1)",
          "maxLength": 120,
          "minLength": 1
        },
        "value": {
          "type": "number",
          "description": "The numeric value of the metric"
        },
        "sortDate": {
          "type": "string",
          "description": "the date to apply sorting by. defaults to the commit time",
          "format": "date-time"
        },
        "units": {
          "type": "string",
          "description": "The units of the metric",
          "title": "maxLength(32)",
          "examples": [
            "ms",
            "ns",
            "bytes",
            "kb",
            "mb"
          ],
          "maxLength": 32
        },
        "trend": {
          "anyOf": [
            {
              "type": "string",
              "enum": [
                "lower-is-better"
              ],
              "description": "if value is _lower_ than the previous run, the trend is _good_. otherwise, the trend is bad"
            },
            {
              "type": "string",
              "enum": [
                "higher-is-better"
              ]
            }
          ],
          "description": "The acceptable trend for the given metric"
        }
      },
      "additionalProperties": false
    }
  },
  "anyOf": [
    {
      "type": "object",
      "required": [
        "metrics"
      ],
      "properties": {
        "metrics": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/Metric"
          },
          "description": "A list of metrics to report"
        }
      },
      "additionalProperties": true
    },
    {
      "type": "array",
      "items": {
        "$ref": "#/$defs/Metric"
      }
    },
    {
      "$ref": "#/$defs/Metric"
    }
  ]
}
